    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB test",
            "type": "cppdbg", // GDB
            "request": "launch",
            "program": "${workspaceFolder}/1-v.exe",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": false
                }
            ],
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        }
    ]
}